{
  "openapi": "3.0.0",
  "info": {
    "title": "Check Price App API",
    "description": "API для получения курсов конверсии криптовалют",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:5000/api"
    }
  ],
  "paths": {
    "/usdtrub": {
      "get": {
        "summary": "Получить курс USDT к RUB",
        "responses": {
          "200": {
            "description": "Успешный ответ с курсом",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "Текущая цена USDT/RUB": {
                      "type": "number",
                      "format": "float",
                      "example": 91.1
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Неверный запрос"
          },
          "404": {
            "description": "Ресурс не найден"
          }
        }
      }
    },
    "/rubusdt": {
      "get": {
        "summary": "Получить курс RUB к USDT",
        "responses": {
          "200": {
            "description": "Успешный ответ с курсом",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "Текущая цена RUB/USDT": {
                      "type": "number",
                      "format": "float",
                      "example": 0.010976948408342482
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Неверный запрос"
          },
          "404": {
            "description": "Ресурс не найден"
          }
        }
      }
    },
    "/": {
      "get": {
        "summary": "Главная страница",
        "responses": {
          "302": {
            "description": "Перенаправление на www.binance.com",
            "headers": {
              "Location": {
                "description": "URL для перенаправления",
                "schema": {
                  "type": "string",
                  "example": "https://www.binance.com"
                }
              }
            }
          },
          "400": {
            "description": "Неверный запрос"
          },
          "404": {
            "description": "Ресурс не найден"
          }
        }
      }
    }
  }
}